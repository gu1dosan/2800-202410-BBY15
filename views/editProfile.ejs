<%- include('templates/headerV2') %>

    <!-- Main Content Wrapper with Padding to Accommodate Button Section -->
    <div class="container mx-auto pt-5 pb-20 overflow-y-auto">
        <h1 class="mb-3 text-center text-2xl">Edit Profile for <%= name %>
        </h1>

        <!-- Profile Picture Section -->
        <div class="flex flex-col items-center mb-5">
            <% if (profilePicture) { %>
                <img src="<%= profilePicture %>" alt="Profile Picture"
                    class="w-32 h-32 md:w-48 md:h-48 lg:w-64 lg:h-64 rounded-full shadow-lg mb-4">
                <% } else { %>
                    <img src="./images/empty-profile-pic.png" alt="Profile Picture"
                        class="w-32 h-32 md:w-48 md:h-48 lg:w-64 lg:h-64 rounded-full shadow-lg mb-4">
                    <% } %>
                        <p class="text-center text-sm md:text-md lg:text-lg">Edit your profile details below, <%= name
                                %>!</p>
        </div>

        <!-- Form for Editing Profile Details -->
        <form action="/updateProfile" method="post" enctype="multipart/form-data"
            class="flex flex-col items-center mb-5">
            <label for="name" class="text-lg mb-2">Name:</label>
            <input type="text" id="name" name="name" value="<%= name %>"
                class="text-center mb-4 p-2 rounded border-2 border-gray-300" required>

            <label for="biography" class="text-lg mb-2">Biography:</label>
            <textarea id="biography" name="biography" rows="4"
                class="w-full max-w-prose text-center p-2 rounded border-2 border-gray-300"
                required><%= biography %></textarea>

            <label for="profilePicture" class="text-lg mb-2">Profile Picture:</label>
            <input type="file" id="profilePicture" name="profilePicture"
                class="text-center mb-4 p-2 rounded border-2 border-gray-300">

            <!-- Button Section at the Bottom -->
            <div class="w-full bg-white z-10 shadow-md">
                <div class="container mx-auto py-4">
                    <div class="grid gap-2 grid-cols-1 md:grid-cols-2">
                        <button type="submit"
                            class="w-full text-white bg-purple hover:bg-blue-700 font-bold py-2 px-4 rounded-lg border-2 border-purple-500">
                            Save
                        </button>
                        <a href="/profile"
                            class="w-full text-center text-white bg-purple hover:bg-gray-700 font-bold py-2 px-4 rounded-lg border-2 border-gray-500">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <%- include('templates/footer') %>