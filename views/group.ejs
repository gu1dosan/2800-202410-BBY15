<%- include("templates/headerV2") %>

<div class="sticky top-[10vh] bg-white p-4 shadow-md">
  <!-- New div for this week's activity -->
  <div class="mb-4 flex items-center justify-between">
    <div class="flex items-center">
      <h2 class="text-lg font-semibold">
        This week's activity: <%= selectedEvent ? selectedEvent.title : "TBD" %>
      </h2>
      <button
        onclick="openEventDetailsPopup()"
        class="ml-2 bg-purple text-white rounded-full p-2"
      >
        ?
      </button>
    </div>
    <div class="flex flex-col items-center">
      <button
        id="submitActivityButton"
        onclick="submitActivity()"
        class="group cursor-pointer outline-none hover:rotate-90 duration-300 p-0 border-none bg-transparent"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="35px"
          height="35px"
          viewBox="0 0 24 24"
          class="stroke-purple fill-none group-hover:fill-light-purple group-active:duration-0 duration-300"
        >
          <path
            d="M12 22C17.5 22 22 17.5 22 12C22 6.5 17.5 2 12 2C6.5 2 2 6.5 2 12C2 17.5 6.5 22 12 22Z"
            stroke-width="1.5"
          ></path>
          <path d="M8 12H16" stroke-width="1.5"></path>
          <path d="M12 16V8" stroke-width="1.5"></path>
        </svg>
      </button>
      <div
        id="popover"
        class="hidden absolute z-10 w-48 p-2 bg-white rounded-lg shadow-lg"
      >
        <p class="text-sm text-center">The submission deadline has passed.</p>
      </div>
    </div>
  </div>
  <!-- Flex container for the green buttons -->
  <div class="flex justify-center items-center relative">
    <!-- View Members button -->
    <!-- <button onclick="openMembersPopup()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">View Members</button> -->
    <!-- Submit Activity button -->
    <a
      href="/randomizer?id=<%= group._id %>"
      class="bg-purple hover:bg-darkPurple text-white font-bold py-2 px-4 rounded ml-2"
      >Randomize</a
    >
    <a
      href="/calendar?id=<%= group._id %>"
      class="bg-purple hover:bg-darkPurple text-white font-bold py-2 px-4 rounded ml-2"
      >Time</a
    >
  </div>
</div>
<!-- Event Details Popup -->
<div
  id="eventDetailsPopup"
  class="hidden fixed top-0 left-0 w-full h-full bg-gray-800 bg-opacity-75 flex justify-center items-center"
>
  <div class="bg-white rounded-lg p-6 max-w-md mx-auto">
    <h2 class="text-xl font-semibold mb-4">Event Details</h2>
    <% if (locals.selectedEvent) { %>
    <p><strong>Title:</strong> <%= selectedEvent.title %></p>
    <p><strong>Description:</strong> <%= selectedEvent.description %></p>
    <p><strong>Location:</strong> <%= selectedEvent.location %></p>
    <p><strong>Contact Info:</strong> <%= selectedEvent.info %></p>
    <p><strong>Category:</strong> <%= selectedEvent.category %></p>
    <p>
      <strong>Time:</strong>
      <span id="eventTimeDisplay"><%= time ? time : "No time set" %></span>
    </p>
    <% } else { %>
      <p>No event has been selected yet.</p>
      <% } %>
    <button
      onclick="closeEventDetailsPopup()"
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-2"
    >
      Close
    </button>
  </div>
</div>
<div class="mt-2 p-2">
