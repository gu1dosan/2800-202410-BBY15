<%- include('templates/header') %>

<div class="container">
    <h1 class="text-center">Random Event Selector</h1>

    <div class="flex justify-center">
        <button id="showEventButton" class="bg-purple hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded">
            Show Selected Event
        </button>
    </div>

    <!-- Hidden element to store event details -->
    <div id="eventDetails" class="hidden">
        <h2>Selected Event</h2>
        <p><strong>Title:</strong> <span id="eventTitle"><%= event.title %></span></p>
        <p><strong>Description:</strong> <span id="eventDescription"><%= event.description %></span></p>
        <p><strong>Location:</strong> <span id="eventLocation"><%= event.location %></span></p>
        <p><strong>Info:</strong> <span id="eventInfo"><%= event.info %></span></p>
        <p><strong>Category:</strong> <span id="eventCategory"><%= event.category %></span></p>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const showEventButton = document.getElementById('showEventButton');
        const eventDetails = document.getElementById('eventDetails');

        showEventButton.addEventListener('click', () => {
            alert(`
                Title: ${document.getElementById('eventTitle').textContent}
                Description: ${document.getElementById('eventDescription').textContent}
                Location: ${document.getElementById('eventLocation').textContent}
                Info: ${document.getElementById('eventInfo').textContent}
                Category: ${document.getElementById('eventCategory').textContent}
            `);
        });
    });
</script>

<%- include('templates/footer') %>
