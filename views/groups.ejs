<%- include("templates/header") %>

<div class="mt-8">
    <% groups.forEach(group => { %>
        <div class="bg-white rounded-lg shadow-md p-4 mb-4">
            <h2 class="text-xl font-semibold mb-2"><%= group.name %></h2>
            <p class="text-gray-600">Members:</p>
            <ul>
                <% group.members.forEach(member => { %>
                    <li><%= member %></li>
                <% }); %>
            </ul>
            <a href="/group/<%= group._id %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-2 inline-block">View Group</a>
        </div>
    <% }); %>
</div>

<div class="flex justify-center items-center mt-8 mb-[86px]">
    <button onclick="openPopup()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 fixed bottom-[100px] right-[16px] rounded">
        Create Group
    </button>
</div>

<div id="popup" class="hidden fixed top-0 left-0 w-full h-full bg-gray-800 bg-opacity-75 flex justify-center items-center">
    <div class="bg-white rounded-lg p-6 relative">
        <h2 class="text-2xl font-bold mb-4">Create new group</h2>
        <form id="groupForm" action="/createGroup" method="post">
            <input type="text" name="name" placeholder="Group Name" class="border border-gray-300 p-2 mb-4 w-full">
            <textarea name="emails" placeholder="Enter members separated by commas or semicolons" class="border border-gray-300 p-2 mb-4 w-full"></textarea>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Submit
            </button>
        </form>
        <button onclick="closePopup()" class="absolute top-0 right-0 mt-4 mr-4 text-gray-500 hover:text-gray-700">&#10005;</button>
    </div>
</div>

<script>
    function openPopup() {
        document.getElementById('popup').classList.remove('hidden');
    }

    function closePopup() {
        document.getElementById('popup').classList.add('hidden');
    }
</script>

<%- include("templates/footer") %>
