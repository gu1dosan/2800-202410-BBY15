<%- include("templates/headerV2") %>

<div class="flex justify-center items-center mt-8">
    <div class="bg-white rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Group Details</h2>
        <div class="border border-gray-300 p-4 rounded-md">
            <!-- Flex container for group name, Edit button, and Leave button -->
            <div class="flex items-center space-x-2 mb-2">
                <h3 class="text-lg font-semibold"><%= group.name %></h3>
                <% if (isAdmin) { %>
                    <button onclick="openEditPopup()" class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-1 px-2 rounded text-sm">Edit</button>
                <% } %>
                <button onclick="openLeavePopup()" class="bg-red hover:bg-red text-white font-bold py-1 px-2 rounded text-sm">Leave Group</button>
            </div>
            <!-- New div for this week's activity -->
            <div class="mt-8 mb-20">
                <h2 class="text-lg font-semibold">This week's activity</h2>
            </div>
            <!-- Flex container for the green buttons -->
            <div class="flex justify-center items-center mb-8">
                <!-- View Members button -->
                <button onclick="openMembersPopup()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">View Members</button>
                <!-- Invite new member button -->
                <button onclick="openInvitePopup()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded ml-2">Invite new members</button>
            </div>
            <!-- View Submitted Activities button -->
            <div class="flex justify-center items-center mb-8">
                <button onclick="viewSubmittedActivities()" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">View Submitted Activities</button>
            </div>
            <!-- Add Deadline button -->
<button onclick="openDeadlinePopup()"
    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded ml-2">Add Deadline</button>

<!-- Deadline Popup -->
<div id="deadlinePopup" class="hidden fixed top-0 left-0 w-full h-full bg-gray-800 bg-opacity-75 flex justify-center items-center">
    <div class="bg-white rounded-lg p-6 w-80">
        <h2 class="text-xl font-semibold mb-4">Add Deadline</h2>
        <button onclick="closeDeadlinePopup()" class="bg-rose-500 hover:bg-rose-700 text-white font-bold py-1 px-2 rounded text-sm">Close</button>
        <form id="deadlineForm" action="/addDeadline?groupId=<%= group._id %>" method="post">
            <label for="deadline">Deadline:</label>
            <input type="datetime-local" id="deadline" name="deadline" required>
            <input type="submit" value="Add Deadline">
        </form>
    </div>
</div>
        <!-- Members List Popup -->
        <div id="membersPopup" class="hidden fixed top-0 left-0 w-full h-full bg-gray-800 bg-opacity-75 flex justify-center items-center">
            <div class="bg-white rounded-lg p-6 w-80">
                <h2 class="text-xl font-semibold mb-4">Members</h2>
                <ul class="list-none pl-0">
                    <% memberDetails.forEach(user => { %>
                    <li class="border-b border-gray-300 py-2 flex justify-between items-center">
                        <li><a href="/userProfile?email=<%= user.email %>" class="text-blue-500 hover:underline"><%= user.name %></a></li>
                      
                            <% if (user.isAdmin) { %> (admin) <% } %>
                        
                        <% if (user.isAdmin) { %>
                        <div>
                            <button onclick="toggleAdminStatus('<%= user.id %>', '<%= user.email %>')" class="text-green-500 hover:text-green-700" title="Toggle admin status">üîΩ</button>
                            </div>
                        <% } else { %>
                            <div class="flex">
                            <button onclick="removeMember('<%= user.id %>')" class="text-red-500 hover:text-red-700 mr-2" title="Remove from group">üóëÔ∏è</button>
                            <button onclick="toggleAdminStatus('<%= user.id %>', '<%= user.email %>')" class="text-green-500 hover:text-green-700" title="Toggle admin status">üîº</button>
                            </div>
                        <% } %>
                    </li>
                    <% }); %>
                </ul>
                <button onclick="closeMembersPopup()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-2">Close</button>
            </div>
        </div>


            <!-- Invite New Member Popup -->
            <div id="invitePopup" class="hidden fixed top-0 left-0 w-full h-full bg-gray-800 bg-opacity-75 flex justify-center items-center">
                <div class="bg-white rounded-lg p-6">
                    <h2 class="text-xl font-semibold mb-4">Invite New Members</h2>
                    <form id="inviteForm" action="/invite?groupId=<%= group._id %>" method="post">
                        <label for="emails" class="block mb-2">Enter email addresses (separated by commas):</label>
                        <textarea id="emails" name="emails" rows="4" class="border border-gray-300 rounded-md p-2 mb-4 w-full"></textarea>
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Invite</button>
                    </form>
                    <button onclick="closeInvitePopup()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-2">Cancel</button>
                </div>
            </div>
            <!-- Edit Group Name Popup -->
            <div id="editPopup" class="hidden fixed top-0 left-0 w-full h-full bg-gray-800 bg-opacity-75 flex justify-center items-center">
                <div class="bg-white rounded-lg p-6">
                    <h2 class="text-xl font-semibold mb-4">Edit Group Name</h2>
                    <form id="editForm" action="/edit-group-name?groupId=<%= group._id %>" method="post">
                        <label for="newName" class="block mb-2">New Group Name:</label>
                        <input type="text" id="newName" name="newName" class="border border-gray-300 rounded-md p-2 mb-4 w-full">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Confirm</button>
                    </form>
                    <button onclick="closeEditPopup()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-2">Cancel</button>
                    <!-- Delete Group Section -->
                    <div class="mt-8">
                        <h2 class="text-xl font-semibold mb-4 text-red">Delete Group</h2>
                        <button onclick="openDeletePopup()" class="bg-red hover:bg-red text-white font-bold py-2 px-4 rounded">Delete Group</button>
                    </div>
                </div>
            </div>
            <!-- Delete Confirmation Popup -->
            <div id="deletePopup" class="hidden fixed top-0 left-0 w-full h-full bg-gray-800 bg-opacity-75 flex justify-center items-center">
                <div class="bg-white rounded-lg p-6">
                    <h2 class="text-xl font-semibold mb-4 text-red">Confirm Delete Group</h2>
                    <p class="mb-4">Are you sure you want to delete this group? This action cannot be undone.</p>
                    <div class="flex justify-end">
                        <button onclick="confirmDeleteGroup()" class="bg-red hover:bg-red text-white font-bold py-2 px-4 rounded mr-2">Delete</button>
                        <button onclick="closeDeletePopup()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Cancel</button>
                    </div>
                </div>
            </div>
            <!-- Leave Confirmation Popup -->
            <div id="leavePopup" class="hidden fixed top-0 left-0 w-full h-full bg-gray-800 bg-opacity-75 flex justify-center items-center">
                <div class="bg-white rounded-lg p-6">
                    <h2 class="text-xl font-semibold mb-4 text-red">Confirm Leave Group</h2>
                    <p class="mb-4">Are you sure you want to leave this group?</p>
                    <div class="flex justify-end">
                        <button onclick="confirmLeaveGroup()" class="bg-red hover:bg-red text-white font-bold py-2 px-4 rounded mr-2">Leave</button>
                        <button onclick="closeLeavePopup()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("templates/footer") %>

<script>

    async function toggleAdminStatus(userId, userEmail) {
        const groupId = '<%= group._id %>';
        try {
            const response = await fetch(`/toggle-admin-status?groupId=${groupId}&userId=${userId}&userEmail=${userEmail}`, {
                method: 'POST'
            });

            if (response.ok) {
                location.reload();
            } else {
                console.error('Failed to toggle admin status');
            }
        } catch (error) {
            console.error('Error toggling admin status:', error);
        }
    }


    async function removeMember(userId) {
        const groupId = '<%= group._id %>';
        try {
            // Send a request to the server to remove the member
            const response = await fetch(`/remove-member?groupId=${groupId}&userId=${userId}`, {
                method: 'DELETE'
            });
            if (response.ok) {
                // Reload the page to reflect the updated member list
                location.reload();
            } else {
                console.error('Failed to remove member');
            }
        } catch (error) {
            console.error('Error removing member:', error);
        }
    }

    function viewSubmittedActivities() {
        window.location.href = '/submitted_event?groupId=<%= group._id %>';
    }

    function openMembersPopup() {
        document.getElementById('membersPopup').classList.remove('hidden');
    }

    function closeMembersPopup() {
        document.getElementById('membersPopup').classList.add('hidden');
    }

    function openInvitePopup() {
        document.getElementById('invitePopup').classList.remove('hidden');
    }

    function closeInvitePopup() {
        document.getElementById('invitePopup').classList.add('hidden');
    }

    function openEditPopup() {
        document.getElementById('editPopup').classList.remove('hidden');
    }

    function closeEditPopup() {
        document.getElementById('editPopup').classList.add('hidden');
    }

    function openDeletePopup() {
        document.getElementById('deletePopup').classList.remove('hidden');
    }

    function closeDeletePopup() {
        document.getElementById('deletePopup').classList.add('hidden');
    }

    function openLeavePopup() {
        document.getElementById('leavePopup').classList.remove('hidden');
    }

    function closeLeavePopup() {
        document.getElementById('leavePopup').classList.add('hidden');
    }

    function confirmDeleteGroup() {
        window.location.href = '/delete-group?groupId=<%= group._id %>';
    }

    function confirmLeaveGroup() {
        window.location.href = '/leave-group?groupId=<%= group._id %>';
    }
    function openDeadlinePopup() {
    document.getElementById('deadlinePopup').classList.remove('hidden');
}
function closeDeadlinePopup() {
        document.getElementById('deadlinePopup').classList.add('hidden');
    }

document.getElementById('deadlineForm').addEventListener('submit', function(event) {
    const deadlineInput = document.getElementById('deadline');
    const deadline = new Date(deadlineInput.value);
    const now = new Date();

    if (deadline <= now) {
        event.preventDefault();
        alert('Deadline must be in the future');
    }
});

</script>
